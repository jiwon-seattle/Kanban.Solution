@{
  Layout = "_Layout";
}

@using Kanban.ViewModels;

@model LoginViewModel

<h2>Log in with your account</h2>

<hr>
@using (Html.BeginForm())
{
  @Html.Label("Email")
  @Html.TextBoxFor(m => m.Email)

  @Html.Label("Password")
  @Html.PasswordFor(m => m.Password)

  <input type="submit" value="Log in">
}