@{
  Layout = "_Layout";
}

@using Kanban.Models;
@model List<Kanban.Models.ToDoList>;

<div class="todolistIndex">
  <h1>To Dos</h1>

  @if (Model.Count == 0)
  {
    <h3>No To dos have been assigned yet.</h3>
  }

  @foreach (ToDoList todolist in Model)
  {
    <h3>@Html.ActionLink($"{todolist.Name}", "Details", new { id = todolist.ToDoListId }) | @todolist.Project.ProjecttName </h3>
  }

  <p>@Html.ActionLink("Add new To Do", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>