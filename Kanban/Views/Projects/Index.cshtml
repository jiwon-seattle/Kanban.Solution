@{
  Layout = "_Layout";
}

@using Kanban.Models;
@model List<Kanban.Models.Project>;

<div class="projectIndex">

  <h1><strong>Projects</strong></h1>

  @if (@Model.Count == 0)
  {
    <h3>No Projects have been added yet!</h3>
  }
  else
  {
    
    @foreach(Project project in Model)
    {
      
      if(project.ActiveStatus == true)
      {
      <div class="activeProjects" style="border: 2px solid green">
      <h3>@Html.ActionLink($"{project.ProjectName}", "Details", new {id = project.ProjectId })</h3>
      </div>
      }
      else
      {
        <div class="completedProjects">
        <h3>@Html.ActionLink($"{project.ProjectName}", "Details", new {id = project.ProjectId })</h3>
        </div>
      }   
    }
  }

  <p>@Html.ActionLink("Add new Project", "Create")</p>
  
</div>