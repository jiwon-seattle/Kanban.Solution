@{
  Layout = "_Layout";
}

@model Kanban.Models.Project

<div class="projectCreate">
  <h1><strong>Add a new Project</strong></h1>

  @using (Html.BeginForm())
  {
    @Html.Label("Project Name")
    @Html.TextBoxFor(model => model.ProjectName)

    @Html.Label("Description")
    @Html.TextAreaFor(model => model.Content)

    @Html.Label("Kick Off Date")
    @Html.TextBoxFor(model => model.KickOffDate, new {@type="date"})
    
    @Html.Label("Due Date")
    @Html.TextBoxFor(model => model.DueDate, new {@type="date"})
    <input type="submit" value="Add new product">

    @Html.Label("Is this Project Active?")
    @Html.CheckBoxFor(model => model.ActiveStatus, true)
  }
</div>