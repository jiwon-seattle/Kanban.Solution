@{
  Layout = "_Layout";
}

@using Kanban.Models;
@model List<Kanban.Models.Manager>;

<div class="managerIndex">
  <h1><strong>Managers</strong></h1>

  @if(@Model.Count == 0)
  {
    <h3>Managers are not in data yet.</h3>

    <p>@Html.ActionLink("Add new manager", "Create")</p>
  }
  else
  {
    @foreach(Manager manager in Model)
    {
      <h3>@Html.ActionLink($"{manager.Name}", "Details", new { id = manager.ManagerId })</h3>
    }

    <p>@Html.ActionLink("Add new manager", "Create")</p>
  }
</div>