@{
  Layout = "_Layout";
}

@using ProductManagement.Models;
@model List<ProductManagement.Models.Product>;

<div class="productIndex">

  <h1><strong>Products</strong></h1>

  @if (@Model.Count == 0)
  {
    <h3>No products have been added yet!</h3>
  }
  else
  {
    @foreach(Product product in Model)
    {
      <h3>@Html.ActionLink($"{product.ProductName}", "Details", new {id = product.ProductId })</h3>
    }
  }

  <p>@Html.ActionLink("Add new products", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
  
</div>